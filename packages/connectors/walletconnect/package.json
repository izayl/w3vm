{
  "name": "@w3vm/walletconnect",
  "version": "0.0.2",
  "description": "WalletConnect connector for W3 EVM library",
  "author": "Glitch-txs",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "tsc -w",
    "build": "tsup",
    "up": "npm i @walletconnect/ethereum-provider@latest @walletconnect/modal@latest",
    "upload": "npm run build && npm publish --public"
  },
  "dependencies": {
    "@walletconnect/ethereum-provider": "^2.10.1",
    "@walletconnect/modal": "^2.6.2"
  },
  "peerDependencies": {
    "@w3vm/core": ">=0",
    "typescript": ">=5"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "keywords": [
    "wallet",
    "eth",
    "ethereum",
    "walletconnect",
    "web3"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/w3vm"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "tsup": "^6.7.0"
  }
}
